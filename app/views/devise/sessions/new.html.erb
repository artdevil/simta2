<div class="container body">
  <div class="row">
    <div class="span4">
    </div>
    <div class="span4">
    <div class="well">
      <h2>Sign in</h2>
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :keyid, :required => false, :autofocus => true, :label => "NIM/NIP" %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember_me, :label => false, :inline_label => "remember me", :as => :boolean if devise_mapping.rememberable? %>
        </div>
        <%= f.button :submit, "Sign in", :class => "btn btn-primary" %>
      <% end %>
      <%#= render "devise/shared/links" %>
    </div>
    </div>          
  </div><!--/row-->
</div> <!-- /container -->